  <td><%= job.status.titleize %></td>
  <td><%= link_to job.admin.first_name, edit_admin_path(job.admin) %></td>

  <td><%= link_to "Delete", job_path(job.id), data: { confirm: "Delete Job?"}, method: :delete %></td>

<% end %>
</tr>
