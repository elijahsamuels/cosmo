
<div class="text-center">
    <h1 class="black">User Log in</h1>

<%= form_with(url: session_path) do %>
<p>
<%= label_tag :email %>
<%= text_field_tag :email, nil, class: '', placeholder: 'Enter Email'%>
</p>

<p>
<%= label_tag :password %>
<%= password_field_tag :password, nil, class: '', placeholder: 'Enter Password' %>
</p>

<%= submit_tag "Login"%>
<% end %><br>

</div>
