<h3>All Invoices for <%= current_user.first_name %></h3>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<% byebug %>

	<% @invoices.each.with_index(1) do |invoice, i| %>
		<tr>
			<td><%= i %>. <%= invoice.date_invoice_sent.strftime("%B %d, %Y") %></td>
			<td><%= number_to_currency(invoice.invoice_amount) %></td>
			<td><%= invoice.job_id %></td>

			<%#= hidden_field_tag :user_id, :value => invoice.user_id %>
			<%#= hidden_field_tag :job_id, :value => invoice.job_id %>

			<td><%= link_to "Generate Invoice", user_invoice_path(id: invoice.job_id) %></td> 
		</tr>
	<% end %>

</tbody>

