<%= form_for @invoice, url: "/jobs/#{@job.id}/invoices/" do |form| %>
	<%= form.hidden_field :job_id, :value => @job.id %>
	<%= form.hidden_field :user_id, :value => current_user.id %>

	<br><%= form.label :invoice_amount, "Invoice Amount" %>
	<br><%= form.number_field :invoice_amount %>

	<%= form.submit "Submit Payment" %>

<% byebug %>
<% end %>


